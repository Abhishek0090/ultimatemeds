{
  "name": "ultimed",
  "version": "1.0.0",
  "description": "This is the backend of medicine store application i.e Ultimed created using MERN stack ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon server.js",
    "server": " node server.js",
    "client": "cd client && npm start",
    "backend-install": " npm install",
    "frontend-install": "cd client && npm install",
    "install-all": "concurrently \"npm start backend-install\" \"npm start frontend-install\"",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "heroku-postbuild": "cd frontend && npm install && npm run build"
  },
